<div class="container-fluid">
    <h1 class="text-center">
        User Details
    </h1>
    <form id="UserDetails">
        <div class="form-group row mt-2">
            <label for="text-first" class="col-sm-2 col-form-label"> First Name </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="firstName" placeholder="Enter text">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="text-second" class="col-sm-2 col-form-label">Second Name </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="secondName" placeholder="Enter text">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="text-title" class="col-sm-2 col-form-label"> Title </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="title" placeholder="Enter text">
            </div>
        </div>

        <div class="form-group row mt-2">
            <label for="email-input" class="col-sm-2 col-form-label">City Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email-input" name="cityName" placeholder="Enter City Name">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="password-input" class="col-sm-2 col-form-label">Department </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="password-input" name="department" placeholder="Enter Department">
            </div>
        </div>



        <div class="form-group row mt-2">
            <div class="col-sm-2">Details have </div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="profileText">
                    <label class="form-check-label" for="checkbox-input">
                        Profile text
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="whyIVolunteer">
                    <label class="form-check-label" for="checkbox-input">
                        Why I volunteer
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"  name="cityid">
                    <label class="form-check-label" for="checkbox-input">
                        City Details
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group row mt-2">
            <div class="col-sm-2">Availability </div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="availability" value="Daily" id="flexRadioDefault1">
                    <label class="form-check-label" for="radio-input1">
                        Daily
                    </label>
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="availability" value="Weekly" id="flexRadioDefault2">
                    <label class="form-check-label" for="radio-input2">
                        Weekly
                    </label>
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="availability" value="Monthly" id="flexRadioDefault3">
                    <label class="form-check-label" for="radio-input2">
                        Monthly
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group row mt-2">
            <label for="select-input" class="col-sm-2 col-form-label">Select Country</label>
            <div class="col-sm-10">
                <select class="js-example-basic-single" id="CountryList" name="countryid">
                    <option>Select Country</option>
                </select>
            </div>
        </div>

        <div class="form-group row mt-2">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>



</div>
