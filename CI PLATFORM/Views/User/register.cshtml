                <div class="row">
                    <div class="myform form rform">
                        <form asp-action="register" asp-controller="User" method="post" name="register">
                                                      <div class="text-center" style="color:red;font-style:bold; font-size:20px"> <span class="mt-2">@TempData["Error"]</span></div>

                          <div class="text-center" style="color:red;font-weight:bold; font-size:20px"> <span class="mt-2">@ViewBag.ErrorMessage</span></div>
                            <div class="form-group mt-2" style="color:#adadad;">
                                <label for="firstname" >First Name</label>
                                <input type="text" asp-for="FirstName" class="form-control" id="first_name" placeholder="evan">
                                 @Html.ValidationMessageFor(model => model.FirstName,null, new{
                                                                @class="text-danger",@style="text-size:1rem !important;"
                                                            })
                            </div>
                            <div class="form-group mt-2" style="color:#adadad;">
                                <label for="lastname" >Last Name</label>
                                <input type="text" asp-for="LastName" class="form-control" id="Second_name"  placeholder="donohue">
                 @Html.ValidationMessageFor(model => model.LastName,null, new{
                                                                @class="text-danger",@style="text-size:1rem !important;"
                                                            })
                            </div>
                            <div class="form-group mt-2" style="color:#adadad;">
                                <label for="number" >Phone Number</label>
                                <input type="number" asp-for="PhoneNumber" onkeydown="javascript: return ['Backspace','Delete','ArrowLeft','ArrowRight'].includes(event.code) ? true : !isNaN(Number(event.key)) && event.code!=='Space'" class="form-control" placeholder="Enter Phone Number">
                            @Html.ValidationMessageFor(model => model.PhoneNumber,null, new{
                                                                @class="text-danger",@style="text-size:1rem !important;"
                                                            })
                            </div>  

                            <div class="form-group mt-2" style="color:#adadad;">
                                <label for="email" >Email your email address</label>
                                <input type="email" asp-for="Email"  name="Email"  class="form-control"id="email" placeholder="evan.donohue@gmail.com">
                            </div>  
                               @Html.ValidationMessageFor(model => model.Email,null, new{
                                     @class="text-danger",@style="text-size:1rem !important;"
                               })


                            <div class="form-group mt-2" style="color:#adadad;">
                                  <label for="exampleInputnewpass" >New Password</label>
                                  <input type="password" asp-for="NewPassword"  class="form-control" placeholder="**********" asp-for=Password>
                              </div>


                               @Html.ValidationMessageFor(model => model.NewPassword,null, new{
                                                                @class="text-danger",@style="text-size:1rem !important;"
                                                            })
                              


                              <div class="form-group mt-2" style="color:#adadad;">
                                <label for="exampleInputconfpass" >Confirm Password</label>
                                <input type="password"  asp-for="ConfirmPassword" class="form-control" aria-describedby="emailHelp" placeholder="**********">
                             </div>
                              @Html.ValidationMessageFor(model => model.ConfirmPassword,null, new{
                                                                @class="text-danger",@style="text-size:1rem !important;"
                                                            })
                           
                            
                                                                                        
