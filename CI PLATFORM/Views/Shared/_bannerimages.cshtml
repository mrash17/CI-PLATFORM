                    <div class="carousel-indicators">
                        @{
                            

                        }
                        @foreach(var i in @Model.bannerList)
                            {
                                var eachindex = Model.bannerList.IndexOf(i);
                                if(eachindex == 0)
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@eachindex" class="active" aria-current="true" aria-label="Slide @eachindex"></button>

                                }
                                else

                                {
                                   <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@eachindex" aria-label="Slide @eachindex"></button>

                                }
         
                            }
