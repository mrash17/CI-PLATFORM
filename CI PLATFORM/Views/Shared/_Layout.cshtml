<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <!--SweetAlerts CDN-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/js/site.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
   
    <div class="container-fluid">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function notappliedalert() {
    // trigger the alert message using Swal.fire
    Swal.fire({
        icon: 'error',
        showCloseButton: true,
        title: 'Please Apply to the Mission',
        showConfirmButton: false,
        text: 'You don`t have Permission as you have not Applied to mission',

    });
};  

function applicationPending() {
    // trigger the alert message using Swal.fire
    Swal.fire({
        icon: 'info',
        showCloseButton: true,
        title: 'Permission Denied',
        showConfirmButton: false,
        text: 'You don`t have Permission as your Mission Application is not approved yet',

    });
};   

function applicationRejected() {
    // trigger the alert message using Swal.fire
    Swal.fire({
         icon: 'error',
        showCloseButton: true,
        title: 'Permission Denied',
        showConfirmButton: false,
        text: 'You don`t have Permission as your Mission Application is Rejected',

    });
};
function notloggedin() {
    // trigger the alert message using Swal.fire
    Swal.fire({
        icon: 'error',
        showCloseButton: true,
        title: 'Please Login',
        showConfirmButton: false,
        text: 'Press the below button to login Register',
        footer: '<div class="btn-group">' +
            '<a href="' + '@Url.Action("Index", "User")"' + ' class="btn btn-success">Login</a>' +
            '<a href="' + '@Url.Action("Register", "User")"' + ' class="btn btn-dark">Register</a>' +
            '</div>',
    });
};
    </script>
</body>
</html>
