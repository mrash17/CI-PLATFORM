@{
Layout = "~/Views/Admin/AdminPage.cshtml";
}
<head>
      <title>Add/Edit Theme Page</title>
          <link rel="stylesheet" href="~/css/AdminUserPage.css">

</head>
 @model ciplatform.entities.ViewModels.ThemePageForAdminViewModel
  @if (TempData["ThemeNotEdted"] != null)
            {
            <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
            <script type="text/javascript">
            toastr.error('@TempData["ThemeNotEdted"]');
            </script>
            } 
<form asp-action="EditTheme" asp-controller="Admin" enctype="multipart/form-data" method="post">
    <div>
        <h3>Add/Edit Theme</h3>
    </div>
           <input type="text" class="form-control" hidden asp-for="ThemeId" />
    <div class="row d-flex mt-2">
        <div class="col-md-6 col-lg-6 col-sm-12 mt-2">
            <label>Theme Name</label>
            <input type="text" class="form-control" asp-for="ThemeTitle" />
            @Html.ValidationMessageFor(model => model.ThemeTitle,null, new{
            @class="text-danger",@style="text-size:1rem !important;"
            })
        </div>

        
    </div>

  
  
    <div class="row d-flex mt-2">
                <div class="col-md-6 col-lg-6 col-sm-12 mt-2">

        <label>Status</label>
        <select id="Status" class="form-control" asp-for="Status">
            <option value="1">Active</option>
            <option value="2">In-Active</option>
        </select>
                </div>

    </div>


              <div class="d-flex justify-content-start mt-2 mb-2">
        
        <a asp-action="ThemePage" asp-controller="Admin" class="btn border border-dark btn-outline-dark" style="border-radius:30px;width: 119px;">
                Cancel
            
        </a>
        <button type="submit" class="btn ms-2 btn-outline-warning" style="border-radius:30px;width: 119px;">
            Save
        </button>
    </div>



